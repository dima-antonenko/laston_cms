<div id="page_heading">
    <h1 id="product_edit_name"><%= @menu.name %></h1>
</div>
<div id="page_content_inner">
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <ul>
                        <% @parents_items.each do |item| %>
                            <li><%=  link_to item.title, edit_administrators_menu_item_path(item) %></li>
                            <% if item.menu_items %>
                                <ul>
                                 <% item.menu_items.each do |item| %>
                                    <li><%=  link_to item.title, edit_administrators_menu_item_path(item) %></li>
                                 <% end %>
                                </ul>
                            <% end %>
                        <% end %>
                    </ul>
                    
                </div>
            </div>
            
            
        </div>
        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                          <table class="uk-table uk-table-nowrap uk-table-hover table_check">
                    <thead>
                        <tr>
                             <th>Позиция</th>
                                    <th>Название</th>
                                    <th>Ссылка</th>
                                    <th>Родитель</th>
                            <th class="filter-false remove sorter-false uk-text-center">Действия</th>
                        </tr>
                    </thead>
                       <tbody>
                        <% @menu_items.each do |item| %>
                        <td><%= item.position %></td>
                                    <td><%= link_to item.title, edit_administrators_menu_item_path(item) %></td>
                                    <td><%= item.url %></td>
                                    <td><%= get_paret_menu_item(item) %></td>
                        <td class="uk-text-center">
                            <%= link_to "<i class=\"material-icons md-24\">&#xE254;</i>".html_safe, edit_administrators_menu_item_path(item)%>
                            <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, administrators_menu_item_path(item), method: :delete %>
                            
                           
                        </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
                    </div>
                </div>
            </div>
            
            <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/administrators/menu_items/new">Добавить</a>
   
            </div>

        </div>
    </div>
    
</div>