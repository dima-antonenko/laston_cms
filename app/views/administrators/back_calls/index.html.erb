<div id="page_content_inner">
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-10-10  uk-width-large-10-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                        <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_pager_filter">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Источник</th>
                                    <th>Телефон</th>
                                    <th>Создан</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @back_calls.each do |item| %>
                                <tr>
                                   <td><%= item.id %></td>

                                    <td>
                                        <% if item.product_id != nil %>
                                          <p>Товар: <%= link_to item.product_name, product_path(item.product_id) %></p>
                                          <p>Артикул: <%=  item.product_sku %></p>
                                        <% else %>
                                          <p>Заявка с произвольной формы сайта</p>
                                        <% end %>
                                    </td>
                                   
                                   <td><%= item.phone %></td>
                                   <td><%= item.created_at %></td>
                                    
                                   <td><%= link_to "удалить", administrators_back_call_path(item), method: :delete %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    
</div>