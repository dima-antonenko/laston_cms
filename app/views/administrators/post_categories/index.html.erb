<div id="page_content_inner">
    <h3 class="heading_b uk-margin-bottom">Категории записей</h3>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <ul>
                        <% @parent_post_categories.each do |category| %>
                        <li><%= link_to category.name, edit_administrators_post_category_path(category) %></li>
                        <% if category.post_categories %>
                        <ul>
                            <% category.post_categories.each do |category| %>
                            <li><%= link_to category.name, edit_administrators_post_category_path(category) %></li>
                            <% end %>
                        </ul>
                        <% else %>
                        <% end %>
                        <% end %>
                    </ul>
                    
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                        <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair uk-table uk-table-nowrap uk-table-hover " id="ts_pager_filter">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Название</th>
                                    <th>Родитель</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @post_categories.each do |category| %>
                                <tr>
                                    <td><%= category.id %></td>
                                    <td><%= link_to category.name, edit_administrators_post_category_path(category) %></td>
                                    <td>
                                        <%= category.post_category.name if category.post_category %>
                                        <%= "Родительская категория" if category.post_category == nil %>
                                    </td>
                                    
                                    <td>
                                        
                                        
                                        <%= link_to "<i class=\"material-icons md-24\">&#xE254;</i>".html_safe, edit_administrators_post_category_path(category)%>
                                        <%= link_to "<i class=\"material-icons md-24\">&#xE872;</i>".html_safe, administrators_post_category_path(category), method: :delete %>
                                        <%= link_to "<i class=\"material-icons md-24\">&#xE88F;</i>".html_safe, post_category_path(category) %>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                    <div class="will_paginate_plugin uk-text-center">
                        <%= will_paginate @product_categories %>
                    </div>
                </div>
            </div>
            
            <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/administrators/post_categories/new">Добавить</a>
                
            </div>
        </div>
    </div>
    
</div>