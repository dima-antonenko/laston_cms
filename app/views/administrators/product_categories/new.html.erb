<div id="page_heading">
    <h1 id="product_edit_name">Новая категория</h1>
</div>
<div id="page_content_inner">
    <%= form_for([:administrators, @product_category], class: "uk-form-stacked", id: "product_edit_form", :multipart => true ) do |f| %>
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-7-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Название</label>
                                
                                <%= f.text_field :name, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Родительская категория</label>
                                <%= f.select :product_category_id , ProductCategory.all.collect{|category| [category.name, category.id]} << ['Родитель', 0],{include_blank: 'Не выбрано'}, {"data-md-selectize ": true} %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Ссылка</label>
                                
                                <%= f.text_field :slug, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Описание</label>
                                 <%= f.cktext_area :description %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="md-card">
                <div class="md-card-content large-padding">
                    <div class="uk-grid uk-grid-divider uk-grid-medium" data-uk-grid-margin>
                        <div class="uk-width-large-2-2">
                            
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - title</label>
                                
                                <%= f.text_field :seo_title, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - description</label>
                                
                                <%= f.text_field :seo_description, class: "md-input" %>
                            </div>
                            <div class="uk-form-row">
                                <label for="product_edit_name_control">Мета - keywords</label>
                                
                                <%= f.text_field :seo_keywords, class: "md-input" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="uk-width-xLarge-3-10  uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-toolbar">
                    <h3 class="md-card-toolbar-heading-text">
                    Аватар
                    </h3>
                    <div class="md-card-toolbar-actions">
                        <%= f.file_field :avatar, class: "product_file_upload" %>
                        <!--  <i class="md-icon material-icons">&#xE146;</i> -->
                    </div>
                </div>
                <div class="md-card-content">
                  
                </div>
            </div>
        
        </div>
        <div class="md-fab-wrapper">
            <a class="md-btn" href="/administrators/product_categories">Назад</a>
            <%= f.submit(class: "md-btn md-btn-success", value: "Обновить") %>
            <% end %>
        </div>
    </div>
    
</div>