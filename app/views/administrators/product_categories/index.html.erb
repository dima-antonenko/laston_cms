<div id="page_content_inner">
    <div class="uk-grid uk-grid-medium" data-uk-grid-margin>
        <div class="uk-width-xLarge-2-10 uk-width-large-3-10">
            <div class="md-card">
                <div class="md-card-content">
                    <ul>
                        <% @parent_product_categories.each do |category| %>
                        <li><%= link_to category.name, edit_administrators_product_category_path(category) %></li>
                        <% if category.product_categories %>
                        <ul>
                            <% category.product_categories.each do |category| %>
                            <li><%= link_to category.name, edit_administrators_product_category_path(category) %></li>
                            <% end %>
                        </ul>
                        <% end %>
                        <% end %>
                    </ul>
                    
                </div>
            </div>
        </div>
        <div class="uk-width-xLarge-8-10  uk-width-large-7-10">
            <div class="md-card">
                <div class="md-card-content">
                    <div class="uk-overflow-container uk-margin-bottom">
                        <table class="uk-table uk-table-align-vertical uk-table-nowrap tablesorter tablesorter-altair" id="ts_pager_filter">
                            <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Название</th>
                                    <th>Родитель</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @product_categories.each do |category| %>
                                <tr>
                                    <td><%= category.id %></td>
                                    <td><%= link_to category.name, edit_administrators_product_category_path(category) %></td>
                                    <td>
                                        <%= category.product_category.name if category.product_category %>
                                        <%= "Родительская категория" if category.product_category == nil %>
                                    </td>
                                    
                                    <td><%= link_to "Удалить", administrators_product_category_path(category), method: :delete %></td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="md-fab-wrapper">
                <a class="md-btn md-btn-success" href="/administrators/product_categories/new">Добавить</a>
                
            </div>
        </div>
    </div>
    
</div>